<Window Height="600"
        Icon="{StaticResource ChordiousIcon}"
        MinHeight="600"
        MinWidth="800"
        Title="{Binding Title, FallbackValue=DIAGRAM EDITOR}"
        Width="800"
        WindowStartupLocation="CenterScreen"
        x:Class="Chordious.WPF.DiagramEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:local="clr-namespace:Chordious.WPF"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="clr-namespace:Xceed.Wpf.Toolkit;assembly=DotNetProjects.Wpf.Extended.Toolkit">
    <Window.InputBindings>
        <KeyBinding Command="{Binding ObservableDiagram.RenderImage}"
                    Key="F5" />
        <KeyBinding Command="{Binding Cancel, Mode=OneWay}"
                    Key="Escape" />
    </Window.InputBindings>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Column="0"
                      Grid.Row="0"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <GroupBox Header="{Binding DimensionsGroupLabel, FallbackValue=DIMENSIONS}"
                          Margin="5">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="{Binding ObservableDiagram.TotalWidthLabel, FallbackValue=WIDTH (PX)}"
                                   Height="25"
                                   Margin="5"
                                   Name="TotalWidthLabel"
                                   Target="{Binding ElementName=TotalWidthTextBox}"
                                   ToolTip="{Binding ObservableDiagram.TotalWidthToolTip}"
                                   Width="120" />
                            <TextBox AutomationProperties.LabeledBy="{Binding ElementName=TotalWidthLabel}"
                                     Height="25"
                                     HorizontalContentAlignment="Center"
                                     IsReadOnly="True"
                                     Margin="5"
                                     MaxLines="1"
                                     Name="TotalWidthTextBox"
                                     Text="{Binding ObservableDiagram.TotalWidth, Mode=OneWay}"
                                     ToolTip="{Binding ObservableDiagram.TotalWidthToolTip}"
                                     VerticalAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     Width="80" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="{Binding ObservableDiagram.TotalHeightLabel, FallbackValue=HEIGHT (PX)}"
                                   Height="25"
                                   Margin="5"
                                   Name="TotalHeightLabel"
                                   Target="{Binding ElementName=TotalHeightTextBox}"
                                   ToolTip="{Binding ObservableDiagram.TotalHeightToolTip}"
                                   Width="120" />
                            <TextBox AutomationProperties.LabeledBy="{Binding ElementName=TotalHeightLabel}"
                                     Height="25"
                                     HorizontalContentAlignment="Center"
                                     IsReadOnly="True"
                                     Margin="5"
                                     MaxLines="1"
                                     Name="TotalHeightTextBox"
                                     Text="{Binding ObservableDiagram.TotalHeight, Mode=OneWay}"
                                     ToolTip="{Binding ObservableDiagram.TotalHeightToolTip}"
                                     VerticalAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     Width="80" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="{Binding ObservableDiagram.NumFretsLabel, FallbackValue=# OF FRETS}"
                                   Height="25"
                                   Margin="5"
                                   Name="NumFretsLabel"
                                   Target="{Binding ElementName=NumFretsUpDown}"
                                   ToolTip="{Binding ObservableDiagram.NumFretsToolTip}"
                                   Width="120" />
                            <xctk:IntegerUpDown AutomationProperties.LabeledBy="{Binding ElementName=NumFretsLabel}"
                                                Height="25"
                                                HorizontalContentAlignment="Center"
                                                Margin="5"
                                                Minimum="1"
                                                Name="NumFretsUpDown"
                                                ToolTip="{Binding ObservableDiagram.NumFretsToolTip}"
                                                Value="{Binding ObservableDiagram.NumFrets}"
                                                VerticalAlignment="Center"
                                                VerticalContentAlignment="Center"
                                                Width="80" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="{Binding ObservableDiagram.NumStringsLabel, FallbackValue=# OF STRINGS}"
                                   Height="25"
                                   Margin="5"
                                   Name="NumStringsLabel"
                                   Target="{Binding ElementName=NumStringsUpDown}"
                                   ToolTip="{Binding ObservableDiagram.NumStringsToolTip}"
                                   Width="120" />
                            <xctk:IntegerUpDown AutomationProperties.LabeledBy="{Binding ElementName=NumStringsLabel}"
                                                Height="25"
                                                HorizontalContentAlignment="Center"
                                                Margin="5"
                                                Minimum="2"
                                                Name="NumStringsUpDown"
                                                ToolTip="{Binding ObservableDiagram.NumStringsToolTip}"
                                                Value="{Binding ObservableDiagram.NumStrings}"
                                                VerticalAlignment="Center"
                                                VerticalContentAlignment="Center"
                                                Width="80" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="{Binding DiagramLayoutGroupLabel, FallbackValue=DIAGRAM LAYOUT}"
                          Margin="5">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="{Binding Style.SelectedOrientationLabel, FallbackValue=ORIENTATION}"
                                      Height="25"
                                      IsChecked="{Binding Style.OrientationIsLocal}"
                                      Margin="5"
                                      Name="OrientationIsLocalCheckBox"
                                      ToolTip="{Binding Style.SelectedOrientationToolTip}"
                                      VerticalAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      Width="120" />
                            <ComboBox AutomationProperties.LabeledBy="{Binding ElementName=OrientationIsLocalCheckBox}"
                                      Height="25"
                                      IsEnabled="{Binding Style.OrientationIsLocal}"
                                      ItemsSource="{Binding Style.Orientations}"
                                      Margin="5"
                                      SelectedIndex="{Binding Style.SelectedOrientationIndex}"
                                      Style="{StaticResource CleanComboBox}"
                                      ToolTip="{Binding Style.SelectedOrientationToolTip}"
                                      VerticalAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      Width="80" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="{Binding Style.SelectedLabelLayoutModelLabel, FallbackValue=LABEL MODEL}"
                                      Height="25"
                                      IsChecked="{Binding Style.LabelLayoutModelIsLocal}"
                                      Margin="5"
                                      Name="LabelLayoutModelIsLocalCheckBox"
                                      ToolTip="{Binding Style.SelectedLabelLayoutModelToolTip}"
                                      VerticalAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      Width="120" />
                            <ComboBox AutomationProperties.LabeledBy="{Binding ElementName=LabelLayoutModelIsLocalCheckBox}"
                                      Height="25"
                                      IsEnabled="{Binding Style.LabelLayoutModelIsLocal}"
                                      ItemsSource="{Binding Style.LabelLayoutModels}"
                                      Margin="5"
                                      SelectedIndex="{Binding Style.SelectedLabelLayoutModelIndex}"
                                      Style="{StaticResource CleanComboBox}"
                                      ToolTip="{Binding Style.SelectedLabelLayoutModelToolTip}"
                                      VerticalAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      Width="80" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="{Binding DiagramBackgroundGroupLabel, FallbackValue=DIAGRAM BACKGROUND}"
                          Margin="5">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="{Binding Style.DiagramColorLabel, FallbackValue=COLOR}"
                                      Height="25"
                                      IsChecked="{Binding Style.DiagramColorIsLocal}"
                                      Margin="5"
                                      Name="DiagramColorIsLocalCheckBox"
                                      ToolTip="{Binding Style.DiagramColorToolTip}"
                                      VerticalAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      Width="120" />
                            <xctk:ColorPicker AutomationProperties.LabeledBy="{Binding ElementName=DiagramColorIsLocalCheckBox}"
                                              Height="25"
                                              IsEnabled="{Binding Style.DiagramColorIsLocal}"
                                              Margin="5"
                                              SelectedColor="{Binding Style.DiagramColor, Converter={StaticResource StringToColorConverter}}"
                                              Style="{StaticResource CleanColorPicker}"
                                              ToolTip="{Binding Style.DiagramColorToolTip}"
                                              VerticalAlignment="Center"
                                              VerticalContentAlignment="Center"
                                              Width="80" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="{Binding Style.DiagramOpacityLabel, FallbackValue=OPACITY}"
                                      Height="25"
                                      IsChecked="{Binding Style.DiagramOpacityIsLocal}"
                                      Margin="5"
                                      Name="DiagramOpacityIsLocalCheckBox"
                                      ToolTip="{Binding Style.DiagramOpacityToolTip}"
                                      VerticalAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      Width="120" />
                            <xctk:DoubleUpDown AutomationProperties.LabeledBy="{Binding ElementName=DiagramOpacityIsLocalCheckBox}"
                                               Height="25"
                                               HorizontalContentAlignment="Center"
                                               IsEnabled="{Binding Style.DiagramOpacityIsLocal}"
                                               Margin="5"
                                               Style="{StaticResource BoundPercentageUpDown}"
                                               ToolTip="{Binding Style.DiagramOpacityToolTip}"
                                               Value="{Binding Style.DiagramOpacity}"
                                               VerticalAlignment="Center"
                                               VerticalContentAlignment="Center"
                                               Width="80" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="{Binding DiagramBorderGroupLabel, FallbackValue=DIAGRAM BORDER}"
                          Margin="5">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="{Binding Style.DiagramBorderColorLabel, FallbackValue=COLOR}"
                                      Height="25"
                                      IsChecked="{Binding Style.DiagramBorderColorIsLocal}"
                                      Margin="5"
                                      Name="DiagramBorderColorIsLocalCheckBox"
                                      ToolTip="{Binding Style.DiagramBorderColorToolTip}"
                                      VerticalAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      Width="120" />
                            <xctk:ColorPicker AutomationProperties.LabeledBy="{Binding ElementName=DiagramBorderColorIsLocalCheckBox}"
                                              Height="25"
                                              IsEnabled="{Binding Style.DiagramBorderColorIsLocal}"
                                              Margin="5"
                                              SelectedColor="{Binding Style.DiagramBorderColor, Converter={StaticResource StringToColorConverter}}"
                                              Style="{StaticResource CleanColorPicker}"
                                              ToolTip="{Binding Style.DiagramBorderColorToolTip}"
                                              VerticalAlignment="Center"
                                              VerticalContentAlignment="Center"
                                              Width="80" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="{Binding Style.DiagramBorderThicknessLabel, FallbackValue=THICKNESS (PX)}"
                                      Height="25"
                                      IsChecked="{Binding Style.DiagramBorderThicknessIsLocal}"
                                      Margin="5"
                                      Name="DiagramBorderThicknessIsLocalCheckBox"
                                      ToolTip="{Binding Style.DiagramBorderThicknessToolTip}"
                                      VerticalAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      Width="120" />
                            <xctk:DoubleUpDown AutomationProperties.LabeledBy="{Binding ElementName=DiagramBorderThicknessIsLocalCheckBox}"
                                               Height="25"
                                               HorizontalContentAlignment="Center"
                                               IsEnabled="{Binding Style.DiagramBorderThicknessIsLocal}"
                                               Margin="5"
                                               Style="{StaticResource PixelUpDown}"
                                               ToolTip="{Binding Style.DiagramBorderThicknessToolTip}"
                                               Value="{Binding Style.DiagramBorderThickness}"
                                               VerticalAlignment="Center"
                                               VerticalContentAlignment="Center"
                                               Width="80" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="{Binding GridSpacingGroupLabel, FallbackValue=GRID SPACINGS}"
                          Margin="5">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="{Binding Style.GridFretSpacingLabel, FallbackValue=FRET SPACING (PX)}"
                                      Height="25"
                                      IsChecked="{Binding Style.GridFretSpacingIsLocal}"
                                      Margin="5"
                                      Name="GridFretSpacingIsLocalCheckBox"
                                      ToolTip="{Binding Style.GridFretSpacingToolTip}"
                                      VerticalAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      Width="120" />
                            <xctk:DoubleUpDown AutomationProperties.LabeledBy="{Binding ElementName=GridFretSpacingIsLocalCheckBox}"
                                               Height="25"
                                               HorizontalContentAlignment="Center"
                                               IsEnabled="{Binding Style.GridFretSpacingIsLocal}"
                                               Margin="5"
                                               Style="{StaticResource PixelUpDown}"
                                               ToolTip="{Binding Style.GridFretSpacingToolTip}"
                                               Value="{Binding Style.GridFretSpacing}"
                                               VerticalAlignment="Center"
                                               VerticalContentAlignment="Center"
                                               Width="80" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="{Binding Style.GridStringSpacingLabel, FallbackValue=STRING SPACING (PX)}"
                                      Height="25"
                                      IsChecked="{Binding Style.GridStringSpacingIsLocal}"
                                      Margin="5"
                                      Name="GridStringSpacingIsLocalCheckBox"
                                      ToolTip="{Binding Style.GridStringSpacingToolTip}"
                                      VerticalAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      Width="120" />
                            <xctk:DoubleUpDown AutomationProperties.LabeledBy="{Binding ElementName=GridStringSpacingIsLocalCheckBox}"
                                               Height="25"
                                               HorizontalContentAlignment="Center"
                                               IsEnabled="{Binding Style.GridStringSpacingIsLocal}"
                                               Margin="5"
                                               Style="{StaticResource PixelUpDown}"
                                               ToolTip="{Binding Style.GridStringSpacingToolTip}"
                                               Value="{Binding Style.GridStringSpacing}"
                                               VerticalAlignment="Center"
                                               VerticalContentAlignment="Center"
                                               Width="80" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="{Binding GridMarginGroupLabel, FallbackValue=GRID MARGINS}"
                          Margin="5">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="{Binding Style.GridMarginLabel, FallbackValue=BASE (PX)}"
                                      Height="25"
                                      IsChecked="{Binding Style.GridMarginIsLocal}"
                                      Margin="5"
                                      Name="GridMarginIsLocalCheckBox"
                                      ToolTip="{Binding Style.GridMarginToolTip}"
                                      VerticalAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      Width="120" />
                            <xctk:DoubleUpDown AutomationProperties.LabeledBy="{Binding ElementName=GridMarginIsLocalCheckBox}"
                                               Height="25"
                                               HorizontalContentAlignment="Center"
                                               IsEnabled="{Binding Style.GridMarginIsLocal}"
                                               Margin="5"
                                               Style="{StaticResource PixelUpDown}"
                                               ToolTip="{Binding Style.GridMarginToolTip}"
                                               Value="{Binding Style.GridMargin}"
                                               VerticalAlignment="Center"
                                               VerticalContentAlignment="Center"
                                               Width="80" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="{Binding Style.GridMarginLeftLabel, FallbackValue=LEFT (PX)}"
                                      Height="25"
                                      IsChecked="{Binding Style.GridMarginLeftIsLocal}"
                                      Margin="5"
                                      Name="GridMarginLeftIsLocalCheckBox"
                                      ToolTip="{Binding Style.GridMarginLeftToolTip}"
                                      VerticalAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      Width="120" />
                            <xctk:DoubleUpDown AutomationProperties.LabeledBy="{Binding ElementName=GridMarginLeftIsLocalCheckBox}"
                                               Height="25"
                                               HorizontalContentAlignment="Center"
                                               IsEnabled="{Binding Style.GridMarginLeftIsLocal}"
                                               Margin="5"
                                               Style="{StaticResource PixelUpDown}"
                                               ToolTip="{Binding Style.GridMarginLeftToolTip}"
                                               Value="{Binding Style.GridMarginLeft}"
                                               VerticalAlignment="Center"
                                               VerticalContentAlignment="Center"
                                               Width="80" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="{Binding Style.GridMarginRightLabel, FallbackValue=RIGHT (PX)}"
                                      Height="25"
                                      IsChecked="{Binding Style.GridMarginRightIsLocal}"
                                      Margin="5"
                                      Name="GridMarginRightIsLocalCheckBox"
                                      ToolTip="{Binding Style.GridMarginRightToolTip}"
                                      VerticalAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      Width="120" />
                            <xctk:DoubleUpDown AutomationProperties.LabeledBy="{Binding ElementName=GridMarginRightIsLocalCheckBox}"
                                               Height="25"
                                               HorizontalContentAlignment="Center"
                                               IsEnabled="{Binding Style.GridMarginRightIsLocal}"
                                               Margin="5"
                                               Style="{StaticResource PixelUpDown}"
                                               ToolTip="{Binding Style.GridMarginRightToolTip}"
                                               Value="{Binding Style.GridMarginRight}"
                                               VerticalAlignment="Center"
                                               VerticalContentAlignment="Center"
                                               Width="80" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="{Binding Style.GridMarginTopLabel, FallbackValue=TOP (PX)}"
                                      Height="25"
                                      IsChecked="{Binding Style.GridMarginTopIsLocal}"
                                      Margin="5"
                                      Name="GridMarginTopIsLocalCheckBox"
                                      ToolTip="{Binding Style.GridMarginTopToolTip}"
                                      VerticalAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      Width="120" />
                            <xctk:DoubleUpDown AutomationProperties.LabeledBy="{Binding ElementName=GridMarginTopIsLocalCheckBox}"
                                               Height="25"
                                               HorizontalContentAlignment="Center"
                                               IsEnabled="{Binding Style.GridMarginTopIsLocal}"
                                               Margin="5"
                                               Style="{StaticResource PixelUpDown}"
                                               ToolTip="{Binding Style.GridMarginTopToolTip}"
                                               Value="{Binding Style.GridMarginTop}"
                                               VerticalAlignment="Center"
                                               VerticalContentAlignment="Center"
                                               Width="80" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="{Binding Style.GridMarginBottomLabel, FallbackValue=BOTTOM (PX)}"
                                      Height="25"
                                      IsChecked="{Binding Style.GridMarginBottomIsLocal}"
                                      Margin="5"
                                      Name="GridMarginBottomIsLocalCheckBox"
                                      ToolTip="{Binding Style.GridMarginBottomToolTip}"
                                      VerticalAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      Width="120" />
                            <xctk:DoubleUpDown AutomationProperties.LabeledBy="{Binding ElementName=GridMarginBottomIsLocalCheckBox}"
                                               Height="25"
                                               HorizontalContentAlignment="Center"
                                               IsEnabled="{Binding Style.GridMarginBottomIsLocal}"
                                               Margin="5"
                                               Style="{StaticResource PixelUpDown}"
                                               ToolTip="{Binding Style.GridMarginBottomToolTip}"
                                               Value="{Binding Style.GridMarginBottom}"
                                               VerticalAlignment="Center"
                                               VerticalContentAlignment="Center"
                                               Width="80" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="{Binding GridBackgroundGroupLabel, FallbackValue=GRID BACKGROUND}"
                          Margin="5">
                    <StackPanel>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Content="{Binding Style.GridColorLabel, FallbackValue=COLOR}"
                                          Height="25"
                                          IsChecked="{Binding Style.GridColorIsLocal}"
                                          Margin="5"
                                          Name="GridColorIsLocalCheckBox"
                                          ToolTip="{Binding Style.GridColorToolTip}"
                                          VerticalAlignment="Center"
                                          VerticalContentAlignment="Center"
                                          Width="120" />
                                <xctk:ColorPicker AutomationProperties.LabeledBy="{Binding ElementName=GridColorIsLocalCheckBox}"
                                                  Height="25"
                                                  IsEnabled="{Binding Style.GridColorIsLocal}"
                                                  Margin="5"
                                                  SelectedColor="{Binding Style.GridColor, Converter={StaticResource StringToColorConverter}}"
                                                  Style="{StaticResource CleanColorPicker}"
                                                  ToolTip="{Binding Style.GridColorToolTip}"
                                                  VerticalAlignment="Center"
                                                  VerticalContentAlignment="Center"
                                                  Width="80" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Content="{Binding Style.GridOpacityLabel, FallbackValue=OPACITY}"
                                          Height="25"
                                          IsChecked="{Binding Style.GridOpacityIsLocal}"
                                          Margin="5"
                                          Name="GridOpacityIsLocalCheckBox"
                                          ToolTip="{Binding Style.GridOpacityToolTip}"
                                          VerticalAlignment="Center"
                                          VerticalContentAlignment="Center"
                                          Width="120" />
                                <xctk:DoubleUpDown AutomationProperties.LabeledBy="{Binding ElementName=GridOpacityIsLocalCheckBox}"
                                                   Height="25"
                                                   HorizontalContentAlignment="Center"
                                                   IsEnabled="{Binding Style.GridOpacityIsLocal}"
                                                   Margin="5"
                                                   Style="{StaticResource BoundPercentageUpDown}"
                                                   ToolTip="{Binding Style.GridOpacityToolTip}"
                                                   Value="{Binding Style.GridOpacity}"
                                                   VerticalAlignment="Center"
                                                   VerticalContentAlignment="Center"
                                                   Width="80" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="{Binding GridLineGroupLabel, FallbackValue=GRID LINES}"
                          Margin="5">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="{Binding Style.GridLineColorLabel, FallbackValue=COLOR}"
                                      Height="25"
                                      IsChecked="{Binding Style.GridLineColorIsLocal}"
                                      Margin="5"
                                      Name="GridLineColorIsLocalCheckBox"
                                      ToolTip="{Binding Style.GridLineColorToolTip}"
                                      VerticalAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      Width="120" />
                            <xctk:ColorPicker AutomationProperties.LabeledBy="{Binding ElementName=GridLineColorIsLocalCheckBox}"
                                              Height="25"
                                              IsEnabled="{Binding Style.GridLineColorIsLocal}"
                                              Margin="5"
                                              SelectedColor="{Binding Style.GridLineColor, Converter={StaticResource StringToColorConverter}}"
                                              Style="{StaticResource CleanColorPicker}"
                                              ToolTip="{Binding Style.GridLineColorToolTip}"
                                              VerticalAlignment="Center"
                                              VerticalContentAlignment="Center"
                                              Width="80" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="{Binding Style.GridLineThicknessLabel, FallbackValue=THICKNESS (PX)}"
                                      Height="25"
                                      IsChecked="{Binding Style.GridLineThicknessIsLocal}"
                                      Margin="5"
                                      Name="GridLineThicknessIsLocalCheckBox"
                                      ToolTip="{Binding Style.GridLineThicknessToolTip}"
                                      VerticalAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      Width="120" />
                            <xctk:DoubleUpDown AutomationProperties.LabeledBy="{Binding ElementName=GridLineThicknessIsLocalCheckBox}"
                                               Height="25"
                                               HorizontalContentAlignment="Center"
                                               IsEnabled="{Binding Style.GridLineThicknessIsLocal}"
                                               Margin="5"
                                               Style="{StaticResource PixelUpDown}"
                                               ToolTip="{Binding Style.GridLineThicknessToolTip}"
                                               Value="{Binding Style.GridLineThickness}"
                                               VerticalAlignment="Center"
                                               VerticalContentAlignment="Center"
                                               Width="80" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="{Binding GridNutGroupLabel, FallbackValue=GRID NUT}"
                          Margin="5">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="{Binding Style.GridNutVisibleLabel, FallbackValue=VISIBLE}"
                                      Height="25"
                                      IsChecked="{Binding Style.GridNutVisibleIsLocal}"
                                      Margin="5"
                                      Name="GridNutVisibleIsLocalCheckBox"
                                      ToolTip="{Binding Style.GridNutVisibleToolTip}"
                                      VerticalAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      Width="120" />
                            <CheckBox AutomationProperties.LabeledBy="{Binding ElementName=GridNutVisibleIsLocalCheckBox}"
                                      Height="25"
                                      IsChecked="{Binding Style.GridNutVisible}"
                                      IsEnabled="{Binding Style.GridNutVisibleIsLocal}"
                                      Margin="5"
                                      ToolTip="{Binding Style.GridNutVisibleToolTip}"
                                      VerticalAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      Width="80" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="{Binding Style.GridNutRatioLabel, FallbackValue=RATIO}"
                                      Height="25"
                                      IsChecked="{Binding Style.GridNutRatioIsLocal}"
                                      Margin="5"
                                      Name="GridNutRatioIsLocalCheckBox"
                                      ToolTip="{Binding Style.GridNutRatioToolTip}"
                                      VerticalAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      Width="120" />
                            <xctk:DoubleUpDown AutomationProperties.LabeledBy="{Binding ElementName=GridNutRatioIsLocalCheckBox}"
                                               Height="25"
                                               HorizontalContentAlignment="Center"
                                               IsEnabled="{Binding Style.GridNutRatioIsLocal}"
                                               Margin="5"
                                               Style="{StaticResource PositivePercentageUpDown}"
                                               ToolTip="{Binding Style.GridNutRatioToolTip}"
                                               Value="{Binding Style.GridNutRatio}"
                                               VerticalAlignment="Center"
                                               VerticalContentAlignment="Center"
                                               Width="80" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        <ScrollViewer Grid.Column="1"
                      Grid.Row="0"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <Image ContextMenuOpening="ImageContextMenu_ContextMenuOpening"
                   Height="{Binding ObservableDiagram.TotalHeight}"
                   Margin="5"
                   MouseLeftButtonDown="DiagramImage_MouseLeftButtonDown"
                   MouseMove="DiagramImage_MouseMove"
                   Name="DiagramImage"
                   Source="{Binding ObservableDiagram.ImageObject}"
                   Width="{Binding ObservableDiagram.TotalWidth}">
                <Image.ContextMenu>
                    <ContextMenu Name="ImageContextMenu">
                        <MenuItem Command="{Binding ObservableDiagram.SendImageToClipboard}"
                                  Header="{Binding ObservableDiagram.SendImageToClipboardLabel, FallbackValue=COPY IMAGE TO CLIPBOARD}"
                                  ToolTip="{Binding ObservableDiagram.SendImageToClipboardToolTip}">
                            <MenuItem.Icon>
                                <local:AutoDisableImage Source="{StaticResource CopyIcon16}" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Command="{Binding ObservableDiagram.SendScaledImageToClipboard}"
                                  Header="{Binding ObservableDiagram.SendScaledImageToClipboardLabel, FallbackValue=COPY SCALED IMAGE TO CLIPBOARD...}"
                                  ToolTip="{Binding ObservableDiagram.SendScaledImageToClipboardToolTip}">
                            <MenuItem.Icon>
                                <local:AutoDisableImage Source="{StaticResource CopyIcon16}" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Command="{Binding ObservableDiagram.SendTextToClipboard}"
                                  Header="{Binding ObservableDiagram.SendTextToClipboardLabel, FallbackValue=COPY SVG TO CLIPBOARD}"
                                  ToolTip="{Binding ObservableDiagram.SendTextToClipboardToolTip}">
                            <MenuItem.Icon>
                                <local:AutoDisableImage Source="{StaticResource CopyIcon16}" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <Separator Visibility="{Binding ObservableDiagram.ValidCommandsAtCursor, Converter={StaticResource BoolToVisibilityConverter}}" />
                        <MenuItem Command="{Binding ObservableDiagram.AddMark}"
                                  Header="{Binding ObservableDiagram.AddMarkLabel, FallbackValue=ADD MARK...}"
                                  ToolTip="{Binding ObservableDiagram.AddMarkToolTip}"
                                  Visibility="{Binding ObservableDiagram.CanAddMark, Converter={StaticResource BoolToVisibilityConverter}}">
                            <MenuItem.Icon>
                                <local:AutoDisableImage Source="{StaticResource AddIcon16}" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Command="{Binding ObservableDiagram.EditMark}"
                                  Header="{Binding ObservableDiagram.EditMarkLabel, FallbackValue=EDIT MARK...}"
                                  ToolTip="{Binding ObservableDiagram.EditMarkToolTip}"
                                  Visibility="{Binding ObservableDiagram.CanEditMark, Converter={StaticResource BoolToVisibilityConverter}}">
                            <MenuItem.Icon>
                                <local:AutoDisableImage Source="{StaticResource EditIcon16}" />
                            </MenuItem.Icon>
                        </MenuItem>
